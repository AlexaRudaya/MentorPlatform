{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\logs.json",
          "outputTemplate": "{Timestamp:G} {Message}{NewLine:1}{Exception:1}",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "MentorsConnection": "Server=localhost;Database=MentorDB;User Id=sa;Password=Ms1password;Trusted_Connection=True;Encrypt=False"
  },
  "Authentication": {
    "Authority": "https://localhost:44374",
    "Audience": "516c8f68-2d32-44c0-8a24-1ecf303f3657"
  }
}